<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/styling/main.css" rel="stylesheet">
</head>
<body class="container mx-auto bg-slate-400">
    <header class="bg-gray-800 text-white p-5 grid grid-cols-2">
        <div>MyApp</div>
        <div class="text-right">❤</div>
    </header>
    <div class="bg-slate-100 p-5 rounded-b-lg">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="px-5 py-1">
        &copy; 2023 - MyApp
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>